<RadzenCard Style="width: 100%;">
    <div class="row mb-2">
        <div class="col-md-2" style="align-self: center;">
            <RadzenLabel Text="@ResLoc["CompanyName"]" />
        </div>
        <div class="col">
            <RadzenTextBox @bind-Value="@MainModel.CompanyName" MaxLength="40" Class="w-100" />
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-md-2" style="align-self: center;">
            <RadzenLabel Text="@ResLoc["BaseYear"]" />
        </div>
        <div class="col">
            <YearSelectBase FieldChanged=FieldChanged/>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-md-2" style="align-self: center;">
            <RadzenLabel Text="@ResLoc["CurrentYear"]" />
        </div>
        <div class="col">
            <YearSelectCurrent FieldChanged=FieldChanged/>
        </div>
    </div>
</RadzenCard>

@code {
    [Parameter]
    public Action FieldChanged { get; set; }  = () => {};
}
