@using System.ComponentModel
@implements IDisposable

<RadzenDropDown TValue="int" Class="w-100"
                Data=@YearList
                @bind-Value=@MainModel.BaseYear />

@code {
    event PropertyChangedEventHandler? fieldChanged;

    protected List<int> YearList = new();

    protected void FillYearList()
    {
        for (int firstYear = AFSConstraints.MinYear - 1, lastYear = AFSConstraints.MaxYear - 1; firstYear < lastYear; lastYear--)
        {
            YearList.Add(lastYear);
        }
    }

    protected override void OnInitialized()
    {
        FillYearList();
        fieldChanged += async (sender, e) =>{await InvokeAsync(StateHasChanged);};
        MainModel.PropertyChanged += fieldChanged;
        base.OnInitialized();
    }
    public void Dispose()=> MainModel.PropertyChanged -= fieldChanged;
}

