@implements IDisposable

<TdComponent>@FieldNumber</TdComponent>
<TdComponent Align="MR">
    <RadzenNumeric TValue="double" ShowUpDown="false" @bind-Value=@Field.Begin Class="w-100" />
</TdComponent>
<TdComponent Align="MR">
    <RadzenNumeric TValue="double" ShowUpDown="false" @bind-Value=@Field.End Class="w-100" />
</TdComponent>

@code {

    [Parameter]
    public BeginEnd Field { get; set; } = new();
    [Parameter]
    public string? FieldNumber { get; set; }

    private event Action? fieldChanged;

    protected override void OnInitialized()
    {
        fieldChanged = () => StateHasChanged();
        Field.OnChange += fieldChanged;
        base.OnInitialized();
    }

    public void Dispose() => Field.OnChange -= fieldChanged;
}
