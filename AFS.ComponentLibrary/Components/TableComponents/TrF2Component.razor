@implements IDisposable

<tr>
    <TdComponent Align="ML">@FieldName</TdComponent>
    <TdComponent>@FieldNumber</TdComponent>
    <TdComponent Align="MR">
        <RadzenNumeric TValue="double" ShowUpDown="false" @bind-Value=@Field.Curent Class="w-100" />
    </TdComponent>
    <TdComponent Align="MR">
        <RadzenNumeric TValue="double" ShowUpDown="false" @bind-Value=@Field.Previous Class="w-100" />
    </TdComponent>
</tr>

@code {
    [Parameter]
    public CurentPrevious Field { get; set; } = new();
    [Parameter]
    public string? FieldNumber { get; set; }
    [Parameter]
    public string? FieldName { get; set; }

    private event Action? fieldChanged;

    protected override void OnInitialized()
    {
        fieldChanged = () => StateHasChanged();
        Field.OnChange += fieldChanged;
        base.OnInitialized();
    }

    public void Dispose() => Field.OnChange -= fieldChanged;
}
